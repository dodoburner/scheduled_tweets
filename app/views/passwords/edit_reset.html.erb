<h1>Reset your password</h1>

<%= form_with model: @user, url: reset_password_edit_path(token: params[:token]), data: { turbo: false } do |f| %>
  <%= render partial: "shared/f_object_errors", locals: { object: f.object } %>

  <div class="mb-3">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Reset password", class: "btn btn-primary" %>
  </div>
<% end %>