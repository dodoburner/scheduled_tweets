<h1>Sign In</h1>

<%= form_with url: sign_in_path, data: { turbo: false } do |f| %>
  <div class="mb-3">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control", placeholder: "steve@apple.com" %>
  </div>
  <div class="mb-3">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.submit "Sign in", class: "btn btn-primary" %>
  </div>

  <%= link_to "Forgot your password?", reset_password_path %>
<% end %>